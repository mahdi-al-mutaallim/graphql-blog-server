{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"extends": [],
	"files": {
		"maxSize": 1048576,
		"includes": ["**", "!prisma/generated"],
		"ignoreUnknown": false
	},
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false,
		"root": "",
		"defaultBranch": "main"
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!/prisma/generated/**"],
		"rules": {
			"recommended": true,
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"recommended": true
			},
			"nursery": {
				"recommended": true
			},
			"performance": {
				"recommended": true
			},
			"security": {
				"recommended": true
			},
			"style": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"includes": ["**", "!/prisma/generated/**"],
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf",
		"attributePosition": "auto",
		"useEditorconfig": false
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": false
		},
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineEnding": "lf",
			"lineWidth": 120,
			"bracketSameLine": false,
			"bracketSpacing": true,
			"attributePosition": "auto"
		},
		"globals": [],
		"jsxRuntime": "transparent",
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineEnding": "lf",
			"lineWidth": 120,
			"trailingCommas": "none"
		},
		"linter": {
			"enabled": true
		}
	},
	"css": {
		"parser": {
			"cssModules": false
		},
		"formatter": {
			"enabled": false,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineEnding": "lf",
			"lineWidth": 120,
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": false
		}
	},
	"overrides": []
}
